<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentAdd">

    <Button
        android:id="@+id/btnAddItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="16dp"
        android:text="Tallenna"
        app:layout_constraintEnd_toEndOf="@+id/cbImportant"
        app:layout_constraintStart_toStartOf="@+id/cbImportant"
        app:layout_constraintTop_toBottomOf="@+id/cbImportant" />

    <EditText
        android:id="@+id/editNotesFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="256dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbImportantFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="16dp"
        android:text="Supertärkeä"
        app:layout_constraintEnd_toEndOf="@+id/editNotes"
        app:layout_constraintStart_toStartOf="@+id/editNotes"
        app:layout_constraintTop_toBottomOf="@+id/editNotes" />
</FrameLayout>